@page
@model LoginModel
@{
    ViewData["Title"] = "Log In";
    ViewBag.HideNavbar = true;
}
<div id="main-log-container">
    <div class="row">
        <div id="log-sec-container">
            <form id="loginForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Log In</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Log In</button>

                <div class="mt-3">
                    <p>
                        <a id="login-links" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="login-links" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Register</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
